{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "roots": [
        "src/"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "src/tests/",
        "src/tests/utils"
    ],
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter"
}